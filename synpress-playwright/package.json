{
  "name": "synpress-playwright",
  "version": "1.0.0",
  "devDependencies": {
    "@playwright/test": "^1.37.0",
    "@synthetixio/synpress": "3.7.2-beta.3",
    "serve": "^14.2.0"
  },
  "scripts": {
    "install:chromium": "playwright install chromium",
